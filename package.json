{
    "name": "jestflow",
    "displayName": "JestFlow",
    "description": "Automatically generate test files that allow reusable step definitions.",
    "icon": "jest-flow.png",
    "version": "1.1.0",
    "publisher": "4imble",
    "repository": "https://github.com/ITFGatwick/JestFlow",
    "engines": {
        "vscode": "^1.23.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:feature",
        "onCommand:extension.generateStep"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.generateStep",
                "title": "Generate Step"
            }
        ],
        "keybindings": [
            {
                "command": "extension.generateStep",
                "key": "alt+f12",
                "mac": "alt+f12",
                "when": "editorTextFocus"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.30",
        "typescript": "^2.6.1",
        "vscode": "^1.1.21"
    },
    "dependencies": {
        "@types/copy-paste": "^1.1.30",
        "copy-paste": "^1.3.0"
    }
}
